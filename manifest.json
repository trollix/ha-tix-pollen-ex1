{
    "domain": "example_hacs_integration",
    "name": "Example HACS Integration",
    "documentation": "https://www.example.com/docs",
    "dependencies": [],
    "codeowners": [],
    "version": "1.0.0",
    "issue_tracker": "https://www.example.com/issues",
    "requirements": ["example-library==1.0.0"],
    "config_flow": false,
    "zeroconf": [],
    "homeassistant": {
      "version": "2022.1.0",
      "python_version": "3.9"
    },
    "custom_components": {
      "sensor": {
        "name": "Example Sensor",
        "config_flow": false,
        "documentation": "https://example.com/docs",
        "requirements": [],
        "codeowners": ["@your_github_username"],
        "config": {
          "name": {
            "name": "Name",
            "required": true,
            "type": "string"
          },
          "unit_of_measurement": {
            "name": "Unit of Measurement",
            "required": false,
            "type": "string",
            "default": ""
          }
        }
      },
      "binary_sensor": {
        "name": "Example Binary Sensor",
        "config_flow": false,
        "documentation": "https://example.com/docs",
        "requirements": [],
        "codeowners": ["@your_github_username"],
        "config": {
          "name": {
            "name": "Name",
            "required": true,
            "type": "string"
          },
          "device_class": {
            "name": "Device Class",
            "required": true,
            "type": "string",
            "options": [
              "battery",
              "cold",
              "connectivity",
              "door",
              "garage_door",
              "gas",
              "heat",
              "light",
              "lock",
              "moisture",
              "motion",
              "moving",
              "occupancy",
              "opening",
              "plug",
              "power",
              "presence",
              "problem",
              "safety",
              "smoke",
              "sound",
              "vibration",
              "window"
            ]
          }
        }
      },
      "climate": {
        "name": "Example Climate",
        "config_flow": false,
        "documentation": "https://example.com/docs",
        "requirements": [],
        "codeowners": ["@your_github_username"],
        "config": {
          "name": {
            "name": "Name",
            "required": true,
            "type": "string"
          }
        }
      },
      "light": {
        "name": "Example Light",
        "config_flow": false,
        "documentation": "https://example.com/docs",
        "requirements": [],
        "codeowners": ["@your_github_username"],
        "config": {
          "name": {
            "name": "Name",
            "required": true,
            "type": "string"
          }
        }
      }
    }
